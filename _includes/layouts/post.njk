---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1 class="postTitle">{{ title }}</h1>
<h3 class="postSubtitle">{{subtitle}}</h3>
<span><h4 class="dateHeader">Date:</h4> {{date | readableDate}}</span>
{%if tags.length > 0%}
    <div class="postTagsWrapper">
        <h4 class="tagHeader">Tags:</h4>
        {% for tag in tags %}
            {%if tag != "posts"%}
                {%- if collections.tagList.indexOf(tag) != -1 -%}
                {% set tagUrl %}/tagged/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
                {%- endif -%}
            {% endif%}
        {% endfor %}
    </div>
{%endif%}

{{ content | safe }}

{% if videoLink %}
<h3>Video Link</h3>
<div class="video-container">
    <iframe width="100%" height="100%" src="{{videoLink}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
{% endif%}

{% if images %}
<div class="{% if images.length > 1 %} slider{% endif %} projectImageContainer">
    {%for img in images%}
        <img class ="projectImage" src="{{img}}" />
    {% endfor %}
</div>
{% endif %}

<p><a href="{{ '/posts' | url }}">‚Üê Blog</a></p>
