<ol reversed class="postlist" style="counter-reset: start-from {{ (projectslist.length) + 1 }}">
{% for project in projectslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ project.url | url }}" class="postlist-link">{% if project.data.title %}{{ project.data.title }}{% else %}<code>{{ project.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ project.date | htmlDateString }}">{{ project.date | readableDate }}</time>
    {% for tag in project.data.tags %}
      {%if tag != "projects"%}
        {%- if collections.projectTagList.indexOf(tag) != -1 -%}
          {% set tagUrl %}/projectTags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
        {%- endif -%}
      {% endif%}
    {% endfor %}
  </li>
{% endfor %}
</ol>
